{% extends 'layout.twig' %}

{% block body %}

<div class="container">
    {% include 'Admin/tabs.twig' with {'tab': 'countries'} %}

    <div class="page-header">
        <h3>Countries <a href="{{ path_for('add_country') }}" class="btn btn-primary pull-right">Add country</a></h3>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th class="text-right">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for country in countries %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ country.name }}</td>
                    <td class="text-right">
                        <a href="{{ path_for('edit_country', {'id': country._id}) }}" class="btn btn-warning btn-sm">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                        <a href="{{ path_for('delete_country', {'id': country._id}) }}" class="btn btn-danger btn-sm">
                            <span class="glyphicon glyphicon-remove"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
