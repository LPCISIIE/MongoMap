{% extends 'layout.twig' %}

{% block body %}

<div class="ui container">
    {% include 'Admin/tabs.twig' with {'tab': 'countries'} %}

    <table class="ui teal striped celled table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th class="right aligned">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for country in countries %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ country.name }}</td>
                    <td class="right aligned">
                        <a href="{{ path_for('edit_country', {'id': country._id}) }}" class="ui mini icon button">
                            <i class="edit icon"></i>
                        </a>
                        <a href="{{ path_for('delete_country', {'id': country._id}) }}" class="ui mini red icon button">
                            <i class="remove icon"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
