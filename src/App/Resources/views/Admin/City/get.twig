{% extends 'layout.twig' %}

{% block body %}

<div class="ui container">
    {% include 'Admin/tabs.twig' with {'tab': 'cities'} %}

    <table class="ui teal striped celled table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Country</th>
                <th class="right aligned">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for city in cities %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ city.name }}</td>
                    <td>{{ city.country.name }}</td>
                    <td class="right aligned">
                        <a href="{{ path_for('edit_city', {'id': city._id}) }}" class="ui mini icon button">
                            <i class="edit icon"></i>
                        </a>
                        <a href="{{ path_for('delete_city', {'id': city._id}) }}" class="ui mini red icon button">
                            <i class="remove icon"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
