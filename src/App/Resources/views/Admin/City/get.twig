{% extends 'layout.twig' %}

{% block body %}

<div class="container">
    {% include 'Admin/tabs.twig' with {'tab': 'cities'} %}

    <div class="page-header">
        <h3>Cities <a href="{{ path_for('add_city') }}" class="btn btn-primary pull-right">Add city</a></h3>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Country</th>
                <th class="text-right">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for city in cities %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ city.name }}</td>
                    <td>{{ city.country.name }}</td>
                    <td class="text-right">
                        <a href="{{ path_for('edit_city', {'id': city._id}) }}" class="btn btn-warning btn-sm">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                        <a href="{{ path_for('delete_city', {'id': city._id}) }}" class="btn btn-danger btn-sm">
                            <span class="glyphicon glyphicon-remove"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
