{% extends 'layout.twig' %}

{% block body %}

<div class="container">
    {% include 'Admin/tabs.twig' with {'tab': 'categories'} %}

    <div class="page-header">
        <h3>Categories <a href="{{ path_for('add_category') }}" class="btn btn-primary pull-right">Add category</a></h3>
    </div>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th class="text-right">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ category.name }}</td>
                <td class="text-right">
                    <a href="{{ path_for('edit_category', {'id': category._id}) }}" class="btn btn-warning btn-sm">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>
                    <a href="{{ path_for('delete_category', {'id': category._id}) }}" class="btn btn-danger btn-sm">
                        <span class="glyphicon glyphicon-remove"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
