{% extends 'layout.twig' %}

{% block body %}

<div class="container">
    <div class="page-header">
        <h2>Events <a href="{{ path_for('add_event') }}" class="btn btn-primary pull-right">Add event</a></h2>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
                <th>Start date</th>
                <th>End date</th>
                <th>Start time</th>
                <th>End time</th>
                <th>Parent event</th>
                <th class="text-right">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ event.name }}</td>
                    <td>{{ event.description }}</td>
                    <td>{{ mongo.dateTime(event.begins_at)|date('d/m/Y') }}</td>
                    <td>{{ mongo.dateTime(event.ends_at)|date('d/m/Y') }}</td>
                    <td>{{ mongo.dateTime(event.begins_at)|date('H:i') }}</td>
                    <td>{{ mongo.dateTime(event.ends_at)|date('H:i') }}</td>
                    <td>{{ event.parent.name }}</td>
                    <td class="text-right">
                        <a href="{{ path_for('edit_event', {'id': event._id}) }}" class="btn btn-warning btn-sm">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                        <a href="{{ path_for('delete_event', {'id': event._id}) }}" class="btn btn-danger btn-sm">
                            <span class="glyphicon glyphicon-remove"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
