{% extends 'layout.twig' %}

{% import 'Macro/form.twig' as form %}

{% block body %}

<div class="container">
    <div class="page-header">
        <h2>Add point</h2>
    </div>
    <form action="" method="POST">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                {{ form.group('name', null, 'name', 'Name') }}
                {{ form.group('address', null, 'address', 'Address') }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form.group('latitude', null, 'latitude', 'Latitude') }}
                    </div>
                    <div class="col-md-6">
                        {{ form.group('longitude', null, 'longitude', 'Longitude') }}
                    </div>
                </div>
                {{ csrf() }}
                <input type="submit" class="btn btn-primary" value="Create">
            </div>
        </div>
    </form>
</div>

{% endblock %}
